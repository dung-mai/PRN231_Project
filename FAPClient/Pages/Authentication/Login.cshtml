@page "/login"
@model FAPClient.Pages.Authentication.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://kit.fontawesome.com/cc5cf43e7a.js" crossorigin="anonymous"></script>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <title>
        @ViewData["Title"] - FAP
    </title>
</head>

<body>
    <form ac method="post" id="form1" class="container">
        <div class="row  mt-5">
            <div class="col mt-2">
                <h1 class="center">
                    FPT University Academic Portal
                </h1>
            </div>
        </div>
        <ol class="breadcrumb" style="background-color: #f5f5f5;padding: .75rem 1rem">
        </ol>

        <div class="row mt-5 d-flex justify-content-center">
            <div class="col-sm-8 col-md-5 pl-4 rounded-left" style="border: solid 1px #ccc;">
                <fieldset>
                    <legend>
                        <span class="label label-default  btn-warning">
                            <b>
                                Sinh viên, Giảng viên, Cán bộ
                                ĐH-FPT
                            </b>
                        </span>
                    </legend>
                    <br>
                    <h3 class="text-center ">Sign in</h3>

                    <div class="message alert-danger">
                        <span>@TempData["Error"]</span>
                    </div>

                    <div class=" mt-3 mb-2 d-flex justify-content-center align-items-center">
                        <i class="fa fa-light fa-envelope"
                           style="font-size: 24px; display: inline-block; width: 40px; color: #b7b2b2;"></i>
                        <input type="email" name="email" />
                    </div>
                    <div class=" mt-3 mb-2 d-flex justify-content-center align-items-center">
                        <i class="fa fa-light fa-lock"
                           style="font-size: 24px; color: #b7b2b2; display: inline-block; width: 40px;"></i>
                        <input type="password" name="password" />
                    </div>
                    <div class="mt-3 mb-3 center d-flex justify-content-center align-items-center">
                        <button type="submit" class="btn btn-primary"><b>Đăng nhập</b></button>
                    </div>
                </fieldset>
            </div>
        </div>
    </form>
</body>
</html>