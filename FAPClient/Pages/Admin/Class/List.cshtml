            </td>
            <td>
                <div>
                    <table class="w-75">
                        <tbody>
                            <tr>
                                <td valign="top">
                                    <table>
                                        <tbody>
                                            @foreach (SubjectResponseDTO subject in Model.SubjectList)
                                            {
                                                <tr>
                                                    <td>
                                                        @if (subject.Id == Model.SubjectId)
                                                        {
                                                            <b>
                                                                @subject.SubjectName
                                                                (@subject.SubjectCode)
                                                            </b>
                                                        }
                                                        else
                                                        {
                                                            <a href="?term=@(Model.TermId)&courseId=@subject.Id">
                                                                @subject.SubjectName
                                                            </a>
                                                            <span>(@subject.SubjectCode)</span>
